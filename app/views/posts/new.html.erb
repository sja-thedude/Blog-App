<% if user_signed_in? %>

<h1 class ="post-create-header">Create a post</h1>
<%= form_with model: @post, method: :post, local: true do |form| %>
<div class="form-container d-flex">
	<section class="title-section from-input d-flex">
		<%= form.label :title, "Title", class: "label" %>
		<%= form.text_field :title, placeholder: "Title", required: true %>
	</section>
	<section class="body-section from-input d-flex">
		<%= form.text_area :text, placeholder: "Type here...", rows: 14, required: true %>
	</section>
	<%= form.submit "Post", class: "submit-btn" %>
  </div>
<% end %> 

 <%else%>
     <h1 class="notlogged-header"> Welcome to BlogApp </h1>
     <div class="notlooged-btn-container">
     <%= link_to "Log in", new_user_session_path, class:"notlogged-btn signin" %>
     <%= link_to "Create account", new_user_registration_path, class:"notlogged-btn create" %>
      </div>
<%end %>
   